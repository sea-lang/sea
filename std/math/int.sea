pkg math {
	// Basic functions

	fun abs(number: int): int {
		if number > 0 -> ret number
		else -> ret -number
	}

	fun max(a: int, b: int): int {
		if a > b -> ret a
		else -> ret b
	}

	fun min(a: int, b: int): int {
		if a < b -> ret a
		else -> ret b
	}

